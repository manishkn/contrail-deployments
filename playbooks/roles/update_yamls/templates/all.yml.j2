---
- hosts: all
  tasks:
  - name: Import variables
    include_vars:
      dir: ../etc/kolla
      extensions: ['yml']
      ignore_files:
        - passwords.yml.original
        - globals.yml.original
        - globals.yml.old

- include: kolla-host.yml
  vars:
    action: bootstrap-servers

- include: site.yml
  vars:
    action: deploy
